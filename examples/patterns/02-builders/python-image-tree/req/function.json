{
  "name": "req",
  "description": "image-tree with requirements",
  "runtime": {
    "lang": "python3.10",
    "package_type": "image",
    "handler": "handler.handler"
  },

  "build": {
    "kind": "Image",
    "images": {
      "base": {
	"version": "0.1.1",
	"commands": [
	  "yum install -y git wget unzip",
	  "yum install -y gcc gcc-c++ libXext libSM libXrender",
	  "pip install -vv -r requirements.txt --target /build/python"
	]
      },
      "code": {
	"parent": "base",
	"commands": []
      }
    }
  }
}
